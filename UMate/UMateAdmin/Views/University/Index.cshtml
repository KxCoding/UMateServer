@model IEnumerable<UMateModel.Entities.Common.University>

@{ ViewData["Title"] = "Index"; }

<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniversityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Homepage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Portal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Library)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Map)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniversityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Homepage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Portal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Library)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Map)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UniversityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UniversityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UniversityId">Delete</a>
            </td>
        </tr>}
    </tbody>
</table>
<div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page = page }))
</div>
